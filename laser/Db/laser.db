record(mbbi, "$(P)Laser:sState") {
   field(DESC, "Laser state")
   field(DTYP, "pydev")
   field(INP, "@laser.getLaserState()")
   field(ZRVL, 1)
   field(ZRST, "Initializing")
   field(ZRSV, "MINOR")
   field(ONVL, 2)
   field(ONST, "Standby")
   field(ONSV, "NO_ALARM")
   field(TWVL, 3)
   field(TWST, "Housekeeping")
   field(TWSV, "MINOR")
   field(THVL, 4)
   field(THST, "Operational")
   field(THSV, "NO_ALARM")
   field(FRVL, 5)
   field(FRST, "Going to Standby")
   field(FRSV, "MINOR")
   field(FVVL, 6)
   field(FVST, "In field update")
   field(FVSV, "MINOR")
   field(SXVL, 7)
   field(SXST, "Service")
   field(SXSV, "MINOR")
   field(SVVL, 8)
   field(SVST, "Failure")
   field(SVSV, "MAJOR")
   field(SCAN, "10 second")
   field(SDIS, "$(P)Laser:getBasicOK.VAL NPP MS")
   field(DISV, "-1") # Will never disable, but will propagate severity
}

record(bi, "$(P)Laser:getBasicOK") {
   field(DTYP, "pydev")
   field(ZNAM, "ERROR")
   field(ONAM, "OK")
   field(ZSV, "INVALID")
   field(INP, "@laser.getBasic()")
   field(SCAN, "10 second")
}
